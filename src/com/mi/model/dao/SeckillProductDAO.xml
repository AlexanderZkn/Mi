<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mi.model.dao.SeckillProductDAO">

    <insert id="addSps" parameterType="ArrayList">
        insert into
          seckill_product(product_id, sp_amount, sp_price, seckill_id)
        values
          <foreach collection="list" item="item" index="index" separator=",">
              (#{item.product.productId}, #{item.spAmount}, #{item.spPrice}, #{item.seckillId})
          </foreach>
    </insert>
</mapper>